{
    "services": {
        "airport-lookup": {
            "name": "airport-lookup",
            "functions": {
                "init": {
                    "filepath": "/functions/data/init.wasm",
                    "pool_size": 1
                },
                "load": {
                    "filepath": "/functions/data/load.wasm",
                    "pool_size": 1
                },
                "fetch": {
                    "filepath": "/functions/data/fetch.wasm",
                    "pool_size": 1
                },
                "handler": {
                    "filepath": "/functions/handlers/lookup.wasm",
                    "pool_size": 1000
                }
            },
            "routes": [
                {
                    "type": "http",
                    "path": "/",
                    "methods": ["POST"],
                    "function": "handler"
                },
                {
                    "type": "init",
                    "function": "init"
                },
                {
                    "type": "scheduled_task",
                    "function": "load",
                    "frequency": 900
                },
                {
                    "type": "function",
                    "function": "load"
                },
                {
                    "type": "function",
                    "function": "fetch"
                }
            ]
        }
    }
}
